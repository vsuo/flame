<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage enabled="true" continueOnError="false" async="false" name="SetSessionPayload">
<DisplayName>SetSessionPayload</DisplayName>
    <FaultRules/>
    <Properties/>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="true" transport="http" type="request">session.request</AssignTo>
	
	<Set>

		<Payload contentType="application/json" variablePrefix="%"
			variableSuffix="#">
			{"client_id" : "%client_id#",
			 "response_type" : "%response_type#",
			 "scope" : "%scope#",
			 "password":"%password#", 
			 "redirect_uri":"%redirect_uri#",
			 "req_state":"%req_state#",
			 "appName":"%developer.app.name#",
			 "nonce":"%nonce#",
			 "display":"%display#",
			 "login_hint":"%login_hint#",
			 "open_id":"true"
			 			
			 			 }
			</Payload>
	</Set>
</AssignMessage>